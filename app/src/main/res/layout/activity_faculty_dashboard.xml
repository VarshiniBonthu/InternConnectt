<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/facultyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faculty Dashboard"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

            <!-- Branch Spinner -->
            <Spinner
                android:id="@+id/facultyBranchSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>

            <!-- Internship Title -->
            <EditText
                android:id="@+id/editTextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Internship Title"
                android:layout_marginBottom="12dp" />

            <!-- Description -->
            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:layout_marginBottom="12dp" />

            <!-- Deadline -->
            <EditText
                android:id="@+id/editTextDeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Deadline (e.g. 2025-07-10)"
                android:layout_marginBottom="12dp" />

            <!-- Link -->
            <EditText
                android:id="@+id/editTextLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Application Link"
                android:layout_marginBottom="12dp" />

            <!-- Important Checkbox -->
            <CheckBox
                android:id="@+id/checkBoxImportant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark as Important"
                android:layout_marginBottom="16dp" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit Internship"
                android:backgroundTint="@color/black"
                android:textColor="@android:color/white" />

            <!-- Posted Internships -->
            <TextView
                android:id="@+id/textViewPostedInternships"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Posted Internships"
                android:textStyle="bold"
                android:padding="8dp"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/facultyInternshipRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="8dp"
        app:itemIconTint="@color/nav_item_selected"
        app:itemTextColor="@color/nav_item_selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
